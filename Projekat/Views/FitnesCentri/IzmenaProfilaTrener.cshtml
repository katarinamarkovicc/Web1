@{
    Layout = "~/Views/Shared/_TrenerLayout.cshtml";
}
@{
    ViewBag.Title = "Izmena Profila";
}

<h2 class="klasaNaslov">Izmena profila korisnika</h2>

<form action="~/FitnesCentri/IzmeniProfil" method="post">
    <table class="klasa1">
        <tr>
            <td>Korisničko ime:</td>
            <td><input type="text" name="korisnickoIme" /></td>
        </tr>
        <tr>
            <td>Lozinka:</td>
            <td><input type="password" name="lozinka" /></td>
        </tr>
        <tr>
            <td>Ime:</td>
            <td><input type="text" name="ime" /></td>
        </tr>
        <tr>
            <td>Prezime:</td>
            <td><input type="text" name="prezime" /></td>
        </tr>
        <tr>
            <td>Email:</td>
            <td><input type="text" name="email" /></td>
        </tr>
        <tr>
            <td>Datum rodjenja: </td>
            <td><input type="date" name="datumRodjenja" /></td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" value="Izmeni" />
            </td>
        </tr>
    </table>
</form>

